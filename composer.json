{
    "name": "viewtrender/php-youtube-testkit-core",
    "description": "Core mock layer for Google YouTube APIs",
    "type": "library",
    "license": "MIT",
    "version": "0.5.0",
    "require": {
        "php": "^8.3",
        "google/apiclient": "^2.15",
        "google/apiclient-services": "*",
        "guzzlehttp/guzzle": "^7.4",
        "guzzlehttp/psr7": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Viewtrender\\Youtube\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Viewtrender\\Youtube\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "google/apiclient-services": true
        },
        "google/apiclient-services": [
            "YouTube",
            "YouTubeAnalytics",
            "YouTubeReporting"
        ]
    }
}
